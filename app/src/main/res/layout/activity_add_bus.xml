<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="10"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/PixelWallpaper"
    tools:context=".LoginActivity"> <!-- Add this line -->
    <!-- Fill the linear layout with some components-->


    <TextView
        android:id="@+id/AddBus"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="left"
        android:text="Add Bus"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/AddYourBus"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="left"
        android:text="Add or edit your bus"
        android:textSize="20dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/busName"
        android:layout_width="349dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Bus Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/capacity"
        android:layout_width="349dp"
        android:layout_height="48dp"
        android:hint="Capacity"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/price"
        android:layout_width="349dp"
        android:layout_height="48dp"
        android:hint="Price"
        android:ems="10"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp">

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="Bus Type"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_directions_bus_24"
            app:tint="@color/black" />

        <Spinner
            android:id="@+id/bus_type_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp">

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="Departure"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_home_24"
            app:tint="@color/black" />

        <Spinner
            android:id="@+id/departure_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp">

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="Departure"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_forward_24"
            app:tint="@color/black" />

        <Spinner
            android:id="@+id/arrival_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp">
        <CheckBox
            android:id="@+id/AC"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:text="AC" />

        <CheckBox
            android:id="@+id/WIFI"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:text="Wifi" />
        <CheckBox
            android:id="@+id/TOILET"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:text="Toilet" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp">
        <CheckBox
            android:id="@+id/TV"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:text="LCD TV" />

        <CheckBox
            android:id="@+id/BOX"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:text="Coolbox" />
        <CheckBox
            android:id="@+id/LUNCH"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:text="Lunch" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp">

        <CheckBox
            android:id="@+id/BAGGAGE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Baggage" />

        <CheckBox
            android:id="@+id/ELEC"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:text="Electric Socket" />

    </LinearLayout>

    <Button
        android:id="@+id/ADD"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3692C3"
        android:text="ADD"
        app:iconTint="#000000" />


</LinearLayout>
