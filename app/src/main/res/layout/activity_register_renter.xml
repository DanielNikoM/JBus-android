<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/RegisterCom"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:text="Register Your Company"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:text="Input company name, address, and phone number" />

    <EditText
        android:id="@+id/RegCompany"
        android:layout_width="371dp"
        android:layout_height="73dp"
        android:ems="10"
        android:hint="Company Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/RegAdd"
        android:layout_width="368dp"
        android:layout_height="70dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="text" />

    <EditText
        android:id="@+id/RegPhoneNum"
        android:layout_width="370dp"
        android:layout_height="72dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="number" />

    <Button
        android:id="@+id/RegisterButtonCom"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3692C3"
        android:text="Register"
        app:iconTint="#000000" />
</LinearLayout>
